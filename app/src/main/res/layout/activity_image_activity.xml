<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/relative_page6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar

        android:background="#aae6f7"
        android:id="@+id/toolbar_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="15dp"
            android:id="@+id/linear17"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:text="Kalyana Vaibahavam"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/text_step5"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_action_arrow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end|center"
                android:singleLine="true"
                android:text="Step5"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <View
        android:id="@+id/view4"
        android:layout_below="@+id/toolbar_5"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:id="@+id/linear_17_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/man_image"
            android:id="@+id/image_view"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="@string/text_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/privacy"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="20dp"
            android:text="@string/text_image1"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="75dp"
        android:layout_below="@+id/linear_17_1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/linear_17_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_margin="5sp"
            android:onClick="btnChoose"
            android:id="@+id/chooseImg"
            android:background="#aae6f7"
            android:text="Choose Image"/>

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_margin="5sp"
            android:onClick="btnUpload"
            android:id="@+id/uploadImg"
            android:background="#aae6f7"
            android:text="Upload\n photo (Max 3)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_17_3"
        android:orientation="vertical"
        android:id="@+id/linear_17_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/text_signup"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end|center"
            android:singleLine="true"
            android:text="I will do it later"
            android:textColor="@color/black"
            android:textSize="15sp"/>


    </LinearLayout>

</RelativeLayout>