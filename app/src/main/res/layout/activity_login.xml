<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_page1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/normal">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Kalyana Vaibahavam"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relative_page1_2"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_action_user"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:hint="Email Id"
            android:drawablePadding="10dp"
            android:paddingLeft="12sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginTop="65dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_action_pass"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:paddingLeft="12sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:maxLength="15"
            android:minEms="15" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_page1_3"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/relative_page1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Sign in"
            android:layout_marginStart="64dp"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp" />

        <Button
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Join Us"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/login_btn"
            android:layout_alignBottom="@+id/login_btn"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_page1_4"
        android:layout_below="@+id/relative_page1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/btn_reset_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:text="@string/btn_forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_below="@+id/btn_reset_password"
            android:orientation="vertical"
            android:id="@+id/linear1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar

                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>