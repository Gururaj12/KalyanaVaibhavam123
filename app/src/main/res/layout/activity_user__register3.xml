<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relative_page4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <android.support.v7.widget.Toolbar
        android:background="#aae6f7"

        android:id="@+id/toolbar_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:text="Kalyana Vaibahavam"
                android:textColor="@color/black"
                android:textSize="24sp"/>

            <TextView

                android:id="@+id/text_step3"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_action_arrow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end|center"
                android:singleLine="true"
                android:text="Step3"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view2"
        android:layout_below="@+id/toolbar_3"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/linear3_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_3"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_education_level"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Education Level *"
            android:textColor="#5e5b5b"
            android:textSize="@dimen/title" />

        <Spinner
            android:textSize="14sp"
            android:id="@+id/spinner_education_level"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_background"
            android:drawSelectorOnTop="true"
            android:ellipsize="middle"
            android:entries="@array/education_arrays"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:spinnerMode="dialog">

        </Spinner>

        <TextView
            android:id="@+id/tv_education_field"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Education Field *"
            android:textColor="#5e5b5b"
            android:textSize="@dimen/title" />

        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/textinputborder"
            android:id="@+id/edit_education_field"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_works_in"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Works in *"
            android:textColor="#5e5b5b"
            android:textSize="@dimen/title" />

        <Spinner
            android:textSize="14sp"
            android:id="@+id/spinner_works_as"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_background"
            android:drawSelectorOnTop="true"
            android:ellipsize="middle"
            android:entries="@array/works_in_arrays"
            android:gravity="left|center"
            android:paddingStart="10dp"
            android:spinnerMode="dialog">

        </Spinner>

        <TextView
            android:id="@+id/tv_works_as"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Works as *"
            android:textColor="#5e5b5b"
            android:textSize="@dimen/title" />

        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/textinputborder"
            android:id="@+id/edit_works_as"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="text" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/linear3_1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/linear3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="20sp"
            android:background="#aae6f7"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Continue"
            android:id="@+id/button_continue_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>



</RelativeLayout>