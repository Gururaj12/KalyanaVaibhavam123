<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/relative_page5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar

        android:background="#aae6f7"
        android:id="@+id/toolbar_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:text="Kalyana Vaibahavam"
                android:textColor="@color/black"
                android:textSize="24sp"/>


            <TextView
                android:id="@+id/text_step4"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_action_arrow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end|center"
                android:singleLine="true"
                android:text="Step4"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <View
        android:id="@+id/view3"
        android:layout_below="@+id/toolbar_4"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ScrollView
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_below="@+id/view3"
            android:id="@+id/linear4_1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:id="@+id/linear4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_food_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Food Type ? *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_food_type"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/food_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>

                <TextView
                    android:id="@+id/tv_smoke"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Smoke ? *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_smoke"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/smoke_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>


                <TextView
                    android:id="@+id/tv_drink"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Drink ? *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_drink"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/drink_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>

                <TextView
                    android:id="@+id/tv_hieght"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Hieght *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_height"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/height_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">


                </Spinner>

                <TextView
                    android:id="@+id/tv_body_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Body Type *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_body_type"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/body_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>

                <TextView
                    android:id="@+id/tv_skin_tone"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Skin tone *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_skin_tone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/skin_tone_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>

                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Mobile Number *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearlayout1"
                android:orientation="vertical">


                <Spinner
                    android:entries="@array/number_arrays"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:id="@+id/spinner_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/textinputborder"
                    android:maxLength="10"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:id="@+id/edt_number"
                    android:inputType="number"
                    android:layout_gravity="right"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/edt_number"
                android:id="@+id/linear4_4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_disability"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Disability *"
                    android:textColor="#5e5b5b"
                    android:textSize="@dimen/title" />

                <Spinner
                    android:textSize="14sp"
                    android:id="@+id/spinner_disability"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_background"
                    android:drawSelectorOnTop="true"
                    android:ellipsize="middle"
                    android:entries="@array/disability_type_arrays"
                    android:gravity="left|center"
                    android:paddingStart="10dp"
                    android:spinnerMode="dialog">

                </Spinner>

                <EditText
                    android:paddingLeft="10dp"
                    android:background="@drawable/textinputborder"
                    android:layout_marginTop="20dp"
                    android:id="@+id/edit_user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:inputType="text" />


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/editText_about"
                    android:id="@+id/linear4_5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#5e5b5b"
                        android:text="About Yourself"
                        android:textSize="@dimen/title"/>


                </LinearLayout>

                <EditText
                    android:hint=" Type min 50 Characters"
                    android:maxLength="50"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/edit_about_him"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/boader"
                    android:gravity="top|left"
                    android:inputType="textEmailSubject|textMultiLine"
                    android:lines="20"
                    android:textColorHint="@color/lightblack"
                    android:textSize="15sp"
                    android:minLines="7"
                    android:padding="10sp"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:singleLine="false" />

                <requestFocus />

                <LinearLayout
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/edit_about_him"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_about_him"
                        android:layout_marginStart="10dp"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView_count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_about_him"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/textView_count1"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/linear4_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="20sp"
                    android:background="#aae6f7"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:text="Done"
                    android:id="@+id/button_done"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
