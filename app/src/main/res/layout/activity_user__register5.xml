<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relative_page6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <android.support.v7.widget.Toolbar
        android:background="#aae6f7"
        android:id="@+id/toolbar_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView

                android:layout_marginStart="50dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:text="Kalyana Vaibahavam"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <View
        android:id="@+id/view4"
        android:layout_below="@+id/toolbar_5"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view4"
        android:orientation="vertical"
        android:id="@+id/linear5_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:paddingLeft="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:text="@string/text2"
            android:id="@+id/text_thnks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/textinputborder"
            android:layout_marginTop="15dp"
            android:id="@+id/editText_email"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:hint="   Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/textinputborder"
            android:layout_marginTop="15dp"
            android:id="@+id/editText_password"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:hint=" Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forgot_register5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Forgot Password ?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <Button
            android:onClick="onClick"
            android:id="@+id/button_last"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#aae6f7"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
